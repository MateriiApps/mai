{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "esnext.array",
      "esnext.asynciterable",
      "esnext.symbol"
    ],
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "target": "ESNEXT",
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ]
}
